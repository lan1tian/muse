				<artifactId>jarvis-tasks</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.mogujie.jarvis</groupId>
				<artifactId>jarvis-logstorage</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.mogujie.jarvis</groupId>
