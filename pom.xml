	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.mogujie.jarvis</groupId>
				<artifactId>jarvis-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.mogujie.jarvis</groupId>
				<artifactId>jarvis-dao</artifactId>
